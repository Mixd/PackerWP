<IfModule mod_headers.c>
    Header set Referrer-Policy "strict-origin"
    Header set Feature-Policy "layout-animations 'none'; unoptimized-images 'none'; oversized-images 'none'; sync-script 'none'; sync-xhr 'none'; unsized-media 'none';"

    # To break onto a new line, add a backslash.
    # The backslash *must* be the last character on the line
    # any number of spaces/tabs are allowed
    # the last line must always *exclude* a backslash
    # terminate each "clause" with a semicolon at the end of the last value
    Header set Content-Security-Policy "\
	default-src 'self'; \
	connect-src 'self' https://yoast.com/feed/widget/; \
	font-src 'self' data: https://fonts.gstatic.com; \
	frame-src 'self' https://disqus.com https://www.google.com https://www.youtube.com; \
